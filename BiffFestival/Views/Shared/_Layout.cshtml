<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <title>@ViewBag.Title - Biff Festival</title>
    @Styles.Render("~/bundles/maincss")
    @Scripts.Render("~/bundles/modernizr")
</head>

<link rel="icon" type="image/png" href="~/Content/Images/Biff_logo_profile16x16.jpg" />

<body>
    @{ Html.RenderPartial("_Header"); }

    @RenderBody()

    @Scripts.Render("~/bundles/mainjquery")
    @Scripts.Render("~/bundles/mainbootstrap")
    @Scripts.Render("~/bundles/mainplugins")

    @RenderSection("scripts", required: false)
    @{ Html.RenderPartial("_Contact"); }
</body>
</html>
